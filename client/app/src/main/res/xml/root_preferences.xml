<androidx.preference.PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title="@string/user_header">

        <EditTextPreference
                app:key="user_id"
                app:title="@string/user_id"
                app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
                app:key="phone_number"
                app:title="@string/phone_number"
                app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory
            app:title="@string/emergency_header">


        <SwitchPreferenceCompat
                app:key="119"
                app:title="119 신고"
                app:summary="넘어짐 감지시 119에 연락합니다. \n(데모버전에서는 동작하지 않습니다.)"
                app:summaryOff="넘어짐 감지시 119에 연락합니다. \n(데모버전에서는 동작하지 않습니다.)"/>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
